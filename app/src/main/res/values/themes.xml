<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Apply global text styles -->
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Body</item>
    </style>

    <!-- Title Text Style -->
    <style name="TextAppearance.MyApp.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="TextAppearance.MyApp.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Body Text Style -->
    <style name="TextAppearance.MyApp.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>